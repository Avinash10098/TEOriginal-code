    Public static String DateFormate(DateTime dt){
        DateTime d = dt;
	//	String dt1 = DateTime.newInstance(d.year(),d.month(),d.day()).format('d.MM.YYYY');
        String dt1 = dt.format('d.MM.yyyy');
        system.debug('Date' +dt);
        Return dt1;
    }

