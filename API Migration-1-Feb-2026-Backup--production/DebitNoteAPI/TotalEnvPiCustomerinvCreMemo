    ///////////////////////CustomerInvMemoNew///////////////////////
    
    
    @future(callout = true)  
    public static void CustomerInvMemoNew(Set<Id> DId){
        System.debug('Inside CustomerInvMemo');
        
        List<Demand__c> dlist = new List<Demand__c>();
        List<API_Log__c> loglist = new List<API_Log__c>();
        List<Demand__c> dlistupdate = new List<Demand__c>();
        
        dlist = [SELECT Id, Name, Booking__r.Project__r.Company_Code__c, 
                 Booking__r.Project__r.Business_Place__c, Due_Date__c, Unit__r.Name,
                 Payment_Milestones__c, Payment_Milestones__r.Milestone_Name__c, 
                 Quotation__c, Booking__r.Customer_Number__c, Invoice_Date__c,
                 Total_Amount_Demanded__c, Total_Amount_with_Tax_Demanded__c, 
                 Total_Tax_Demanded__c, CurrencyIsoCode, 
                 Booking__r.Sales_Order_Number__c, 
                 Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c,
                 Towards_Land__c, Towards_Construction__c, 
                 Charge_1_Lookup__r.Tax_Rate__c, Demand_Unique_ID__c, 
                 Payment_Milestones__r.Towards_Land_Legacy__c,
                 Payment_Milestones__r.Towards_Construction_Legacy__c, 
                 Payment_Milestones__r.Towards_Maintainence_Fund_legacy__c, 
                 Payment_Milestones__r.SGST__c, Payment_Milestones__r.CGST__c,
                 Payment_Milestones__r.Is_Legacy_Data__c, 
                 Back_Date_Posting_Date__c, 
                 Payment_Milestones__r.Is_Back_Dated__c, 
                 Payment_Milestones__r.Towards_Clubhouse_Membership__c,
                 Unit__r.Permitted_Use__c , Payment_Milestones__r.TotalMilestoneAmountWIthTax__c ,  Charge_1_SGST__c, Charge_1_CGST__c, Booking__r.Unit__r.Name
                 FROM Demand__c 
                 WHERE Id IN :DId];
        
        if(dlist != null && dlist.size() > 0){
            for(Demand__c d : dlist){
                // Get Applicant Details
                List<Applicant_Details__c> aplist = [SELECT Id, Name, GSTIN__c, 
                                                      Booking__c, Applicant_Number__c 
                                                      FROM Applicant_Details__c 
                                                      WHERE Booking__c = :d.Booking__c 
                                                      AND Applicant_Number__c = 'Primary Applicant'];
                
                if(aplist.isEmpty()) continue;
                
                System.debug('Aplist: ' + aplist);
                
                // Determine GL Codes based on GSTIN
                String GLcgst = '';
                String GLsgst = '';
                System.debug('aplist[0].GSTIN__c: ' + aplist[0].GSTIN__c);
                
                if(aplist[0].GSTIN__c != null && aplist[0].GSTIN__c != ''){
                    GLcgst = '2120090';
                    GLsgst = '2120100';
                } else {
                    GLcgst = '2120090';
                    GLsgst = '2120100';
                }
                
                System.debug('GL Codes: ' + GLcgst + ' sgst: ' + GLsgst);
                System.debug('Demand List: ' + d);
                System.debug('Project Code: ' + d.Booking__r.Project__r.Company_Code__c);
                
                // Calculate tax split
                Decimal sgst = d.Total_Tax_Demanded__c / 2;
                Decimal cgst = d.Total_Tax_Demanded__c / 2;
                
                System.debug('TaxName: ' + d.Charge_1_Lookup__r.Tax_Rate__c);
                
                // Get Tax Slab
                List<Tax_Slab__c> tlist = [SELECT Id, Name, SAP_code__c, Tax_Name__c 
                                            FROM Tax_Slab__c 
                                            WHERE Tax_Rate__c = :d.Charge_1_Lookup__r.Tax_Rate__c 
                                            AND Charge_Type__c != 'Cheque Bounce' 
                                            AND Charge_Type__c != 'Brokerage Reversal' 
                                            AND From_Date__c <= TODAY 
                                            AND (To_Date__c >= TODAY OR To_Date__c = null)];
                
                System.debug('Tax name: ' + tlist);
                
                // Determine posting date
                String dat;
                if(d.Payment_Milestones__r.Is_Back_Dated__c == true){
                    dat = SAPIntegrationAPI.DateFormate(d.Back_Date_Posting_Date__c);
                } else {
                    dat = SAPIntegrationAPI.DateFormate(System.today());
                }
                
                // Build JSON request body
                Map<String, Object> requestBody = new Map<String, Object>();
                
                if(d.Payment_Milestones__r.Is_Legacy_Data__c == false){
                    // Non-Legacy Data
                    requestBody.put('BUSCS', 'R');
                    requestBody.put('BUKRS', d.Booking__r.Project__r.Company_Code__c);
                    requestBody.put('BELNR', '');
                    requestBody.put('GJAHR', '');
                    requestBody.put('BLDAT', dat);
                    requestBody.put('BLART', 'GA');
                    requestBody.put('BUDAT', dat);
                    requestBody.put('XBLNR', '');
                    //requestBody.put('BKTXT', d.Demand_Unique_ID__c);
                    requestBody.put('BKTXT', d.Name);
                    requestBody.put('KUNNR', d.Booking__r.Customer_Number__c);
                    requestBody.put('WRBTR', d.Total_Amount_with_Tax_Demanded__c);
                    requestBody.put('ZTERM', 'Z001');
                    requestBody.put('ZLSCH', 'C');
                    requestBody.put('SGTXT', d.Payment_Milestones__r.Milestone_Name__c);
                    requestBody.put('MWSKZ', '');
                    requestBody.put('WAERS', 'INR');
                    requestBody.put('VBELN', d.Booking__r.Sales_Order_Number__c);
                    requestBody.put('POSNR', '10');
                    requestBody.put('DEL_FLAG', '');
                    requestBody.put('GST_PART', '');
                    requestBody.put('PLC_SUP', '');
                    requestBody.put('BUPLA', d.Booking__r.Project__r.Business_Place__c);
                    
                    List<Map<String, Object>> items = new List<Map<String, Object>>();
                    
                    // Land line item
                    Map<String, Object> landItem = new Map<String, Object>();
                    landItem.put('KSCHL', '');
                    landItem.put('WRBTR', d.Towards_Land__c);
                    landItem.put('KOSTL', '');
                    landItem.put('MWSKZ', '');
                    landItem.put('PROJK', d.Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c);
                    landItem.put('SGTXT', 'Towards Land');
                    landItem.put('STAWN', '9954');
                    landItem.put('HKONT', '2080070');
                    //landItem.put('assignment', tlist[0].SAP_code__c);
                    landItem.put('ZUONR', d.Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c+'_'+d.Booking__r.Unit__r.Name);
                    items.add(landItem);
                    
                    // Construction line item
                    Map<String, Object> constructionItem = new Map<String, Object>();
                    constructionItem.put('KSCHL', '');
                    constructionItem.put('WRBTR', d.Towards_Construction__c);
                    constructionItem.put('KOSTL', '');
                    constructionItem.put('MWSKZ', '');
                    constructionItem.put('PROJK', d.Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c);
                    constructionItem.put('SGTXT', 'Towards Construction');
                    constructionItem.put('STAWN', '9954');
                    constructionItem.put('HKONT', '2080070');
                    //constructionItem.put('assignment', tlist[0].SAP_code__c);
                    constructionItem.put('ZUONR', d.Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c+'_'+d.Booking__r.Unit__r.Name);
                    items.add(constructionItem);
                    
                    // SGST line item
                    Map<String, Object> sgstItem = new Map<String, Object>();
                    sgstItem.put('KSCHL', '');
                    sgstItem.put('WRBTR', d.Total_Tax_Demanded__c / 2 );
                    sgstItem.put('KOSTL', '');
                    sgstItem.put('MWSKZ', '');
                    sgstItem.put('PROJK', d.Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c);
                    sgstItem.put('SGTXT', 'Towards SGST');
                    sgstItem.put('STAWN', '9954');
                    sgstItem.put('HKONT', GLsgst);
                    sgstItem.put('ZUONR', d.Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c+'_'+d.Booking__r.Unit__r.Name);
                    items.add(sgstItem);
                    
                    // CGST line item
                    Map<String, Object> cgstItem = new Map<String, Object>();
                    cgstItem.put('KSCHL', '');
                    cgstItem.put('WRBTR', d.Total_Tax_Demanded__c / 2  );
                    cgstItem.put('KOSTL', '');
                    cgstItem.put('MWSKZ', '');
                    cgstItem.put('PROJK', d.Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c);
                    cgstItem.put('SGTXT', 'Towards CGST');
                    cgstItem.put('STAWN', '9954');
                    cgstItem.put('HKONT', GLcgst);
                    cgstItem.put('ZUONR', d.Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c+'_'+d.Booking__r.Unit__r.Name);
                    items.add(cgstItem);
                    
                    requestBody.put('items', items);
                    
                } else {
                    // Legacy Data
                    Decimal landLegacy = 0;
                    if(d.Payment_Milestones__r.Towards_Land_Legacy__c != null){
                        landLegacy = d.Payment_Milestones__r.Towards_Land_Legacy__c;
                    }
                    
                    Decimal constructionLegacy = 0;
                    if(d.Payment_Milestones__r.Towards_Construction_Legacy__c != null){
                        constructionLegacy = d.Payment_Milestones__r.Towards_Construction_Legacy__c;
                    }
                    
                    Decimal clubHouseMembershipLegacy = 0;
                    if(d.Payment_Milestones__r.Towards_Clubhouse_Membership__c != null){
                        clubHouseMembershipLegacy = d.Payment_Milestones__r.Towards_Clubhouse_Membership__c;
                    }
                    
                    Decimal mfLegacy = 0;
                    if(d.Payment_Milestones__r.Towards_Maintainence_Fund_legacy__c != null){
                        mfLegacy = d.Payment_Milestones__r.Towards_Maintainence_Fund_legacy__c;
                    }
                    
                    Decimal sgstLegacy = 0;
                    Decimal cgstLegacy = 0;
                    if(d.Payment_Milestones__r.SGST__c != null){
                        sgstLegacy = d.Payment_Milestones__r.SGST__c;
                    }
                    if(d.Payment_Milestones__r.CGST__c != null){
                        cgstLegacy = d.Payment_Milestones__r.CGST__c;
                    }
                    
                    String saleOrder = d.Booking__r.Sales_Order_Number__c;
                    String posnr = '10';
                    if(d.Unit__r.Permitted_Use__c == 'Plotted Development'){
                        saleOrder = '';
                        posnr = '';
                    }
                    
                    Decimal totalAmt = landLegacy + constructionLegacy + clubHouseMembershipLegacy + 
                                       mfLegacy + sgstLegacy + cgstLegacy;
                    
                    requestBody.put('BUSCS', 'R');
                    requestBody.put('BUKRS', d.Booking__r.Project__r.Company_Code__c);
                    requestBody.put('BELNR', '');
                    requestBody.put('GJAHR', '');
                    requestBody.put('BLDAT', dat);
                    requestBody.put('BLART', 'GA');
                    requestBody.put('BUDAT', dat);
                    requestBody.put('XBLNR', '');
                    requestBody.put('BKTXT', d.Name);
                    requestBody.put('KUNNR', d.Booking__r.Customer_Number__c);
                    requestBody.put('WRBTR', totalAmt);
                    requestBody.put('ZTERM', 'Z001');
                    requestBody.put('ZLSCH', 'C');
                    requestBody.put('SGTXT', d.Payment_Milestones__r.Milestone_Name__c);
                    requestBody.put('MWSKZ', '');
                    requestBody.put('WAERS', 'INR');
                    requestBody.put('VBELN', saleOrder);
                    requestBody.put('POSNR', posnr);
                    requestBody.put('DEL_FLAG', '');
                    requestBody.put('GST_PART', '');
                    requestBody.put('PLC_SUP', '');
                    requestBody.put('BUPLA', d.Booking__r.Project__r.Business_Place__c);
                    
                    List<Map<String, Object>> items = new List<Map<String, Object>>();
                    
                    // Land Legacy
                    Map<String, Object> landItem = new Map<String, Object>();
                    landItem.put('KSCHL', '');
                    landItem.put('WRBTR', landLegacy);
                    landItem.put('KOSTL', '');
                    landItem.put('MWSKZ', '');
                    landItem.put('PROJK', d.Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c);
                    landItem.put('SGTXT', 'Towards Land');
                    landItem.put('STAWN', '9954');
                    landItem.put('HKONT', '2080070');
                    landItem.put('ZUONR', d.Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c+'_'+d.Booking__r.Unit__r.Name);
                    items.add(landItem);
                    
                    // Construction Legacy
                    Map<String, Object> constructionItem = new Map<String, Object>();
                    constructionItem.put('KSCHL', '');
                    constructionItem.put('WRBTR', constructionLegacy);
                    constructionItem.put('KOSTL', '');
                    constructionItem.put('MWSKZ', '');
                    constructionItem.put('PROJK', d.Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c);
                    constructionItem.put('SGTXT', 'Towards Construction');
                    constructionItem.put('STAWN', '9954');
                    constructionItem.put('HKONT', '2080070');
                    constructionItem.put('ZUONR', d.Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c+'_'+d.Booking__r.Unit__r.Name);
                    items.add(constructionItem);
                    
                    // Clubhouse Membership
                    Map<String, Object> clubhouseItem = new Map<String, Object>();
                    clubhouseItem.put('KSCHL', '');
                    clubhouseItem.put('WRBTR', clubHouseMembershipLegacy);
                    clubhouseItem.put('KOSTL', '');
                    clubhouseItem.put('MWSKZ', '');
                    clubhouseItem.put('PROJK', d.Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c);
                    clubhouseItem.put('SGTXT', 'Towards Clubhouse Membership');
                    clubhouseItem.put('STAWN', '9954');
                    clubhouseItem.put('HKONT', '2080070');
                    clubhouseItem.put('ZUONR', d.Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c+'_'+d.Booking__r.Unit__r.Name);
                    items.add(clubhouseItem);
                    
                    // Maintenance Fund
                    Map<String, Object> mfItem = new Map<String, Object>();
                    mfItem.put('KSCHL', '');
                    mfItem.put('WRBTR', mfLegacy);
                    mfItem.put('KOSTL', '');
                    mfItem.put('MWSKZ', '');
                    mfItem.put('PROJK', d.Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c);
                    mfItem.put('SGTXT', 'Towards MaintainenceFund');
                    mfItem.put('STAWN', '9954');
                    mfItem.put('HKONT', '2080110');
                    mfItem.put('ZUONR', d.Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c+'_'+d.Booking__r.Unit__r.Name);
                    items.add(mfItem);
                    
                    // SGST Legacy
                    Map<String, Object> sgstItem = new Map<String, Object>();
                    sgstItem.put('KSCHL', '');
                    sgstItem.put('WRBTR', sgstLegacy);
                    sgstItem.put('KOSTL', '');
                    sgstItem.put('MWSKZ', '');
                    sgstItem.put('PROJK', d.Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c);
                    sgstItem.put('SGTXT', 'Towards SGST');
                    sgstItem.put('STAWN', '9954');
                    sgstItem.put('HKONT', GLsgst);
                    sgstItem.put('ZUONR', d.Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c+'_'+d.Booking__r.Unit__r.Name);
                    items.add(sgstItem);
                    
                    // CGST Legacy
                    Map<String, Object> cgstItem = new Map<String, Object>();
                    cgstItem.put('KSCHL', '');
                    cgstItem.put('WRBTR', cgstLegacy);
                    cgstItem.put('KOSTL', '');
                    cgstItem.put('MWSKZ', '');
                    cgstItem.put('PROJK', d.Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c);
                    cgstItem.put('SGTXT', 'Towards CGST');
                    cgstItem.put('STAWN', '9954');
                    cgstItem.put('HKONT', GLcgst);
                    cgstItem.put('ZUONR', d.Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c+'_'+d.Booking__r.Unit__r.Name);
                    items.add(cgstItem);
                    
                    requestBody.put('items', items);
                }
                
                // Make REST API callout
                HttpRequest req = new HttpRequest();
                req.setEndpoint(endpoint());
                req.setMethod('POST');
                req.setTimeout(120000);
                req.setHeader('Authorization', authorization());
                req.setHeader('Content-Type', 'application/json');
                req.setBody(JSON.serialize(requestBody));
                
                Http http = new Http();
                HTTPResponse res = new HTTPResponse();
                
                
                    res = http.send(req);
                    System.debug('res:: ' + res.getBody());
                    
                    // Parse JSON response
                    String MESSAGE = '';
                    String RETCODE = '';
                    String BELNR = '';
                    String XBLNR = '';
                    String BUDAT = '';
                   
                    if(res.getStatusCode() == 200){
                        try {
                            Object responseObj = JSON.deserializeUntyped(res.getBody());
                            if(responseObj instanceof List<Object>){
                                List<Object> responseList = (List<Object>)responseObj;
                                
                                if(!responseList.isEmpty()){
                                    Map<String, Object> responseMap = (Map<String, Object>)responseList[0];
                                    
                                    if(responseMap.containsKey('BELNR')){
                                        BELNR = (String)responseMap.get('BELNR');
                                    }
                                    if(responseMap.containsKey('XBLNR')){
                                        XBLNR = (String)responseMap.get('XBLNR');
                                    }
                                    if(responseMap.containsKey('BUDAT')){
                                        BUDAT = (String)responseMap.get('BUDAT');
                                    }
                                    if(responseMap.containsKey('MESSAGE')){
                                        MESSAGE = (String)responseMap.get('MESSAGE');
                                    }
                                    if(responseMap.containsKey('RETCODE')){
                                        RETCODE = (String)responseMap.get('RETCODE');
                                    }
                                }
                            } else if(responseObj instanceof Map<String, Object>){
                                Map<String, Object> responseMap = (Map<String, Object>)responseObj;
                                
                                if(responseMap.containsKey('BELNR')){
                                    BELNR = (String)responseMap.get('BELNR');
                                }
                                if(responseMap.containsKey('XBLNR')){
                                    XBLNR = (String)responseMap.get('XBLNR');
                                }
                                if(responseMap.containsKey('BUDAT')){
                                    BUDAT = (String)responseMap.get('BUDAT');
                                }
                                if(responseMap.containsKey('MESSAGE')){
                                    MESSAGE = (String)responseMap.get('MESSAGE');
                                }
                                if(responseMap.containsKey('RETCODE')){
                                    RETCODE = (String)responseMap.get('RETCODE');
                                }
                            }
                            
                            System.debug('accountingDocumentNumber: ' + BELNR);
                            System.debug('referenceDocumentNumber: ' + XBLNR);
                            System.debug('postingDate: ' + BUDAT);
                            System.debug('message: ' + MESSAGE);
                            System.debug('returnCode: ' + RETCODE);
                            
                        } catch(Exception e){
                            System.debug('Error parsing response: ' + e.getMessage());
                            MESSAGE = 'Error parsing response: ' + e.getMessage();
                            RETCODE = 'ERROR';
                        }
                    }
                    
                    // Create API Log
                    API_Log__c ap = new API_Log__c();
                    ap.API_Name__c = 'Invoice API';
                    ap.Request__c = JSON.serialize(requestBody);
                    ap.Response__c = res.getBody();
                    ap.Message__c = MESSAGE;
                    ap.Response_Code__c = RETCODE;
                    ap.Demand__c = d.Id;
                    loglist.add(ap);
                    
                    // Update Demand if successful
                    if(XBLNR != '' && BUDAT != '' && 
                       BELNR != null){
                        d.SAP_Invoice_No__c = XBLNR;
                        d.SAP_Posting_Date__c = Date.valueOf(BUDAT);
                        d.Accounting_Document_Number__c = BELNR;
                        dlistupdate.add(d);
                    }
                
            }
        }
        
        if(!loglist.isEmpty()){
            insert loglist;
            update dlistupdate;
        }
    }
    
