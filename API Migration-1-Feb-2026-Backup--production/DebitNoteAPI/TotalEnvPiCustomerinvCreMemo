                items.add(cgstItem);
                
                // SGST line item
                Map<String, Object> sgstItem = new Map<String, Object>();
                sgstItem.put('KSCHL', '');
                sgstItem.put('WRBTR', String.valueof(SGST));
                sgstItem.put('KOSTL', '');
