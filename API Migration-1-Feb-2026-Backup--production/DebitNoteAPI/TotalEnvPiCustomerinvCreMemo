                requestBody.put('BKTXT', d.Name);
                requestBody.put('KUNNR', d.Booking__r.Customer_Number__c);
                requestBody.put('WRBTR', String.valueOf(TotalwithTax));
                requestBody.put('ZTERM', 'Z001');
                requestBody.put('ZLSCH', '');
                requestBody.put('SGTXT', ProCodeUnitNoRemarks);
                requestBody.put('MWSKZ', '');
