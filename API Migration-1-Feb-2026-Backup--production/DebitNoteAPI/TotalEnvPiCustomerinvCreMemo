    ///////////////////////// CustomerCredMemoNew Rest Class //////////////////////////////////////////////////////////
     // Test class ---> TestTotalEnvPiCustomerinvCreMemoRest
      public class CustomerCredMemoResponseWrapper {
        public String BELNR;  
        public String RETCODE;   
        public String MESSAGE;  
        public String BUDAT;    
        public String XBLNR;    
        public String WRBTR;    
        public String FUGUEID;
        
    }
    
    
    public static CustomerCredMemoResponseWrapper parse(String json) {
        return (CustomerCredMemoResponseWrapper) System.JSON.deserialize(json, CustomerCredMemoResponseWrapper.class);
    }
    
    
    @future(callout = true)  
    public static void CustomerCredMemo(set<Id> RId){
        List<Receipt__c> rlist = new List<Receipt__c>();
        rlist = [Select id,Name,Project__r.Company_Code__c,Sub_Type_Credit_Note__c,Project_Unit__c,Booking__r.Customer_Number__c,Receipt_Date__c,Amount_Rs__c,Receipt_Unique_ID__c,
                 Booking__r.Sales_Order_Number__c,Project_Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c,Project__r.State_Region_Code__c,Project__r.Business_Place__c,HSN_SAC_Code__c,
                 Is_Back_Dated__c,Back_Date_Posting_Date__c,Description__c, Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c,Booking__r.Unit__r.Name from Receipt__c where id =: RId ];
        
        List<API_Log__c> loglist = new List<API_Log__c>();
        List<Receipt__c> receiptUpdate = new List<Receipt__c>();
        String dat;
        if(rlist[0].Is_Back_Dated__c ==  True){
             dat = SAPIntegrationAPI.DateFormate(rlist[0].Back_Date_Posting_Date__c);
        }else{
             dat = SAPIntegrationAPI.DateFormate(date.today());
        }
        
        if(rlist != null && rlist.size() >0){
            
            for(Receipt__c r : rlist){
                String GLCode = '';
                if(r.Sub_Type_Credit_Note__c == 'Subvention'){
                    GLCode = '2080080';
                }
                if(r.Sub_Type_Credit_Note__c == 'TDS'){
                    GLCode = '128210';
                }
                if(r.Sub_Type_Credit_Note__c == 'Compensation'){
                    GLCode = '5000040';
                }
                if(r.Sub_Type_Credit_Note__c == 'Account Transfer'){
                    GLCode = '2080090';
                }
                if(r.Sub_Type_Credit_Note__c == 'NPV/Other Discount' || r.Sub_Type_Credit_Note__c == 'Interior Design'){
                    GLCode = '5040450';
                 // GLCode = '252100';
                }
                if(r.Sub_Type_Credit_Note__c == 'Pre EMI Reimbursement'){
                    GLCode = '5040520';
                }
                String salesOrNo = '' ;
                String posnr  = '';
                if(r.Sub_Type_Credit_Note__c == 'NPV/Other Discount'){
                    salesOrNo = '';
                    posnr = '';
                }else{
                    salesOrNo = r.Booking__r.Sales_Order_Number__c;
                    posnr = '10';
                }
                String concatStr = r.Sub_Type_Credit_Note__c + r.Description__c;
                String subTypeAndDesc ;
                subTypeAndDesc = concatStr.length() >= 50 ?  concatStr.substring(0,49) : concatStr ;
                
                Map<String, Object> payload = new Map<String, Object>{
                    'BUSCS' => 'G',
                    'BUKRS' => r.Project__r.Company_Code__c,
                    'BELNR' => '',
                    'GJAHR' => '',
                    'BLDAT' => dat,
                    'BLART' => 'GC',
                    'BUDAT' => dat,    
                    'XBLNR' => '',
                    'BKTXT' => r.Name,
                    'KUNNR' => r.Booking__r.Customer_Number__c,
                    'WRBTR' => r.Amount_Rs__c,
                    'ZTERM' => 'Z001',
                    'ZLSCH' => 'C',
                    'SGTXT' => subTypeAndDesc,
                    'MWSKZ' => '',
                    'WAERS' => 'INR',
                    'VBELN' => salesOrNo,
                    'POSNR' => posnr,
                    'DEL_FLAG' => '',
                    'GST_PART' => '',
                    'PLC_SUP' => r.Project__r.State_Region_Code__c,
                    'BUPLA' => r.Project__r.Business_Place__c,
                    'items' => new List<Map<String, Object>>{
                        new Map<String, Object>{
                            'KSCHL' => '',
                            'WRBTR' => r.Amount_Rs__c,
                            'KOSTL' => '',
                            'MWSKZ' => '',
                            'PROJK' => r.Project_Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c,
                            'SGTXT' => subTypeAndDesc,
                            'STAWN' => '9954',
                            'HKONT' => GLCode,
                            'ZUONR' => r.Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c+'_'+r.Booking__r.Unit__r.Name
                        }
                    }
                };
                    
                String eventEndPoint = '';
                HttpRequest req = new HttpRequest();
                req.setEndpoint(endpoint());
                req.setMethod('POST');
                req.setTimeout(60000);
                req.setHeader('Authorization', authorization());
                req.setHeader('Content-Type', 'application/json');
                req.setBody(JSON.serialize(payload));
                Http http = new Http();
                HttpResponse res; 
               
                try{
                    
                res = http.send(req);
                system.debug('res::'+res.getBody());
                
                
                CustomerCredMemoResponseWrapper response = CustomerCredMemoResponseWrapper.parse(res.getBody());
                
                if (res.getStatusCode() == 200 || res.getStatusCode() == 201){
                    
                     API_Log__c ap = new API_Log__c();
                    ap.API_Name__c = 'Credit Note API';
                    ap.Message__c = response.Message;
                    ap.Response_Code__c = response.RETCode;
                    ap.Request__c = JSON.serializePretty(payload);
                    ap.Response__c = res.getBody();
                    ap.Receipt__c = r.Id;
                    loglist.add(ap);
                    if(response.BELNR  !='' && response.BELNR != Null){
                            r.Accounting_Document_Number__c = response.BELNR;
                            // r.SAP_Posting_Date__c = Date.today();
                            if(response.BUDAT != '' && response.BUDAT != NUll){
                                r.SAP_Posting_Date__c = Date.valueOf(response.BUDAT);
                            }
                            receiptUpdate.add(r);
                        }
                    }
                } catch(Exception e) {
                    System.debug('Exception: ' + e.getMessage());
                    // Log error
                    API_Log__c ap = new API_Log__c();
                    ap.API_Name__c = 'Credit Note API Error';
                    ap.Message__c = e.getMessage();
                    ap.Request__c = JSON.serializePretty(payload);
                    ap.Response__c = res.getBody();
                    ap.Receipt__c = r.Id;
                    loglist.add(ap);
                }
                
             }
            if(!loglist.isEmpty()){
                insert loglist;
                update receiptUpdate;
            }
        }
    }
    
    ///////////////// CustomerCredMemoNew Rest ends Here //////////////////////////////////////////////////////
    
    
