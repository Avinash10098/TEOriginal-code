                                    BELNR = (String)responseMap.get('BELNR');
                                }
                                if(responseMap.containsKey('XBLNR')){
                                    XBLNR = (String)responseMap.get('XBLNR');
                                }
                                if(responseMap.containsKey('BUDAT')){
                                    BUDAT = (String)responseMap.get('BUDAT');
                                }
