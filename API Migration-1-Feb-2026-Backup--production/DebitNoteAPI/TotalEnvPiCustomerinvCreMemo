                landItem.put('SGTXT', d.Debit_Type__c);
                landItem.put('STAWN', '9954');
                landItem.put('HKONT', GLCode);
                landItem.put('ZUONR', d.Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c+'_'+d.Booking__r.Unit__r.Name);
                items.add(landItem);
                
                // CGST line item
                Map<String, Object> cgstItem = new Map<String, Object>();
                cgstItem.put('KSCHL', '');
                cgstItem.put('WRBTR', String.valueof(CGST));
                cgstItem.put('KOSTL', '');
                cgstItem.put('MWSKZ', '');
                cgstItem.put('PROJK', d.Booking__r.Unit__r.Tower__r.Cluster__r.SAP_Project_Code__c);
