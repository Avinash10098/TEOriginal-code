    public List<SelectOption> pickListValuesAuthorizedsignatory {
        get {
            if(pickListValuesAuthorizedsignatory == null) {
                pickListValuesAuthorizedsignatory = new List<SelectOption>();
                pickListValuesAuthorizedsignatory.add(new SelectOption('', '-- Select --'));
                pickListValuesAuthorizedsignatory.add(new SelectOption('Abhijit Lahiri', 'Abhijit Lahiri'));
                pickListValuesAuthorizedsignatory.add(new SelectOption('Deepti Tolani', 'Deepti Tolani'));
                pickListValuesAuthorizedsignatory.add(new SelectOption('Karthick Dhanasekaran', 'Karthick Dhanasekaran'));
            }
            return pickListValuesAuthorizedsignatory;
        }
        set;
    }
    
    
     public List<SelectOption> pickListValuespresentingforregistration {
        get {
