                pickListValuespresentingforregistration.add(new SelectOption('Rajath S Patil', 'Rajath S Patil'));
                pickListValuespresentingforregistration.add(new SelectOption('Sanapala Naga Raju', 'Sanapala Naga Raju'));
                pickListValuespresentingforregistration.add(new SelectOption('Arun Lal', 'Arun Lal'));
            }
            return pickListValuespresentingforregistration;
        }
        set;
    }
    
    
