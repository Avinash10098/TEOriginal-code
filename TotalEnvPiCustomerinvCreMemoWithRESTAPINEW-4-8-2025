                String GLCode = '';
                if(r.Sub_Type_Credit_Note__c == 'Subvention'){
                    GLCode = '252320';
                }
                if(r.Sub_Type_Credit_Note__c == 'TDS'){
                    GLCode = '128210';
                }
                if(r.Sub_Type_Credit_Note__c == 'Compensation'){
                    GLCode = '500480';
                }
                if(r.Sub_Type_Credit_Note__c == 'Account Transfer'){
                    GLCode = '252330';
                }
